{
    "handyman_version": "0.1.1",
    "name": "example",
    "description": "an example of a complete app spec",
    "config": {
        "some_config_key": "a value",
        "disable_version_command": true
    },
    "vars": {
        "_doc": "These variables can be referenced elsewhere in the doc using $(varname).",
        "my-api-base-url": "https://api.example.com/v2",
        "my-lambda-arn": "aws:arn:region:account:lambda:function:name:version"
    },
    "commands": {
        "noop-command": {
            "description": "do nothing"
        },
        "exec-command":{
            "_doc": "This is an example of an exec command; we use it to exec things",
            "description": "execute a local binary",
            "exec": {
                "path": "/bin/bash",
                "env": {
                    "FOO": "value"
                }
            }
        },
        "lambda-command": {
            "description": "invoke an AWS Lambda function",
            "lambda": {
                "arn": "$(my-lambda-arn)",
                "request_params": {
                    "some_param": {
                        "type": "string",
                        "required": true,
                        "cli_as": "arg"
                    },
                    "yet_another_one": {
                        "type": "bool"
                    }
                }
            }
        },
        "rest-command": {
            "description": "make a call to a REST endpoint",
            "rest": {
                "endpoint": "$(my-api-base-url)/things/{id}?foo={foo}",
                "method": "GET",
                "path_params": {
                    "id": {
                        "type": "int"
                    }
                },
                "query_params": {
                    "foo": {
                        "type": "string",
                        "required": false
                    }
                },
                "post_params": {
                    "auth_token": {
                        "type": "string",
                        "required": true
                    },
                    "new_thing_id": {
                        "type": "string",
                        "required": true
                    }
                }
            }
        },
        "subcommands-command": {
            "description": "these are some subcommands",
            "common_params": {
                "debug": {
                    "type": "bool",
                    "cli_as": "flag"
                }
            },
            "subcommands": {
                "foo": {
                    "description": "a subcommand"
                },
                "bar": {
                    "description": "another subcommand"
                }
            }
        }
    }
}
